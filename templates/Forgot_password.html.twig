{% extends 'base.html.twig' %}

{% block title %}SNOWTRICKS LOGIN{% endblock %}
{% block header %}
    <div class="container">
        <div class="row">
            <div class="col s12 white-text">
                <h2><i class="medium material-icons prefix">group_add</i> Réinitialisation du mot de passe</h2>
            </div>
        </div>
        <div class="row">
            {{ form_start(form) }}
            <div class="input-field col s12">
                <i class="material-icons prefix white-text">account_circle</i>
                <label class="active">{{ form_label(form.pseudo) }}</label>
                {{ form_widget(form.pseudo) }}
                {% if form_errors(form.pseudo) %}
                    <div class="form-errors">{{ form_errors(form.pseudo) }}</div>
                {% endif %}
            </div>
            <div class="input-field col s12">
                <i class="material-icons prefix white-text">mail</i>
                <label class="active">{{ form_label(form.mail) }}</label>
                {{ form_widget(form.mail) }}
                {% if form_errors(form.mail) %}
                    <div class="form-errors">{{ form_errors(form.mail) }}</div>
                {% endif %}
            </div>
            <div class="col s12 center-align">
                <button type="submit" name="confirm" class="waves-effect waves-light btn-small green darken-1">Demande de réinitialisation</button>
                <button type="submit" name="cancel" class="waves-effect waves-light btn-small pink darken-1">Effacer</button><br><br>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}AJOUTER DES IMAGES{% endblock %}

{% block header %}
    {{ form_start(form) }}
    <div class="file-field input-field col s12 white-text">
        <div class="btn pink darken-1">+Images
            {{ form_widget(form.image) }}
            {{ form_errors(form.image) }}
        </div>
        <div class="file-path-wrapper white-text">
            <input class="file-path validate white-text" type="text" placeholder="Vous pouvez télécharger plusieurs fichiers">
        </div>
    </div>
    <button type="submit" name="Publier" id="publier" class="waves-effect waves-light btn-small green darken-1">Publier</button>
    <button type="submit" name="reinitialiser" class="waves-effect waves-light btn-small pink darken-1">
        Réinitialiser
    </button><br><br>
    {{ form_end(form) }}
{% endblock %}
<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Entity\Tricks"
            repository-class="App\Repository\TricksRepository">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="userId" type="integer"/>
        <field name="groupId" type="integer"/>
        <field name="name" type="string" length="255" />
        <field name="content" type="text" />
        <field name="trickDate" type="datetime"/>
        <field name="trickUpdate" type="datetime"/>
        <many-to-one field="user" target-entity="Users" />
        <many-to-one field="group" target-entity="Groups" />

    </entity>
</doctrine-mapping>